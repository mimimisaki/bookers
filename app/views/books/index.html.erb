<h1>Books</h1>
<p>一覧ページです</p>

<h2>一覧</h2>
<div class="books-table">
	<% @books.each do |book| %>
	<p class="book-title"><%= link_to book.title, book_path(book) %></p>
	<p class="book-body"><%= link_to book.body, book_path(book) %></p>
	<% end %>
</div>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
<% end %>
