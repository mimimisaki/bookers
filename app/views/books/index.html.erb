<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<th><%= book.title %></th>
			<th><%= book.body %></th>
			<th><%= link_to "Show", book_path(book.id) %></th>
			<th><%= link_to "Edit", edit_book_path(book.id) %></th>
			<th><%= link_to "Destroy", book_path(book.id), method: :delete %></th>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<%= render 'books/error_messages', model: @book %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<h4>
	<%= f.submit 'Create Book' %>
	</h4>
<% end %>
